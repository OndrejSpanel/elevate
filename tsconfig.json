{
	"files": [
		"plugin/core/core.d.ts"
	],
	"include": [
		// Common
		"plugin/common/**/*.ts",
		// Core
		"plugin/core/**/*.ts",
		// AngularJS application
		"plugin/options/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"outDir": "./dist/",
		"target": "es5",
		"module": "commonjs",
		"lib": [
			"dom",
			"es6",
			"webworker"
		],
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"skipLibCheck": true
	},
	"compileOnSave": false
}
